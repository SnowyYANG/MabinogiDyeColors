<Window x:Class="MabinogiDyeColors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MabinogiDyeColors"
        mc:Ignorable="d"
        Title="洛奇染色药水颜色代码查询" Height="450" Width="800" FontSize="20">
    <Grid>
        <Image Source="/cloth.png" Width="256" Height="256" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <StackPanel Margin="260 0 0 0">
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="RadioButton">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="10 0 0 0"/>
                    </Style>
                </StackPanel.Resources>
                <RadioButton IsChecked="True">全彩</RadioButton>
                <RadioButton>淡彩</RadioButton>
                <RadioButton>皮革</RadioButton>
                <RadioButton>丝绸</RadioButton>
                <RadioButton>金属</RadioButton>
                <RadioButton>武器</RadioButton>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <TextBlock>
                    <Hyperlink>选择颜色</Hyperlink>
                </TextBlock>
                <TextBox Width="290"/>
                <Button>搜索</Button>
            </StackPanel>
            <TextBlock>搜索输入范例</TextBlock>
            <TextBox IsReadOnly="True" BorderThickness="0" Width="300" HorizontalAlignment="Left">#FF0000</TextBox>
            <TextBox IsReadOnly="True" BorderThickness="0" Width="300" HorizontalAlignment="Left">R=0 G=0</TextBox>
            <TextBox IsReadOnly="True" BorderThickness="0" Width="300" HorizontalAlignment="Left">#008000 R&lt;64 B&lt;64</TextBox>
        </StackPanel>
        <WrapPanel Margin="0 260 0 0">
            <WrapPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Width" Value="128"/>
                    <Setter Property="TextAlignment" Value="Center"/>
                </Style>
            </WrapPanel.Resources>
            <TextBlock>目标颜色</TextBlock>
            <TextBlock>2</TextBlock>
            <TextBlock>更多颜色</TextBlock>
        </WrapPanel>
    </Grid>
</Window>
